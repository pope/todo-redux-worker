{
  "name": "todo",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all -l -p serve watch:*",
    "build": "npm-run-all build:*",
    "build:html": "html-minifier --minify-js true --minify-css true --collapse-whitespace --remove-attribute-quotes -o dist/index.html src/index.html",
    "build:rollup": "rollup -c",
    "watch:html": "nodemon --watch src -e html -x \"npm run build:html\"",
    "watch:rollup": "rollup -c --no-watch.clearScreen",
    "watch:tsc": "tsc --noEmit --watch --preserveWatchOutput --pretty",
    "serve": "es-dev-server",
    "fmt": "npm-run-all fmt:*",
    "fmt:prettier": "prettier --write \"src/**/*.{js,ts,html}\" *.{js,md}",
    "fmt:eslint": "eslint \"*/**/*.{js,ts}\" *.js --quiet --fix",
    "lint": "npm-run-all lint:*",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint \"*/**/*.{js,ts}\" *.js --quiet",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "es-dev-server": "^1.10.4",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-lit": "^1.1.1",
    "html-minifier": "^4.0.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rollup": "^1.19.4",
    "rollup-plugin-minify-html-literals": "^1.2.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript": "^1.0.1",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "lit-html": "^1.1.1",
    "redux": "^4.0.4",
    "redux-observable": "^1.1.0",
    "rxjs": "^6.5.2",
    "todomvc-app-css": "^2.2.0"
  }
}
